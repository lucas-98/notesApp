<div class="row" >
    {{#each notes}}
        <div class="col-md-3">
            <div class="card my-2">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center ">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                        {{description}}
                    </p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" value="DELETE" name="_method">
                        
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <h1> Hola {{user.name}}</h1>
                    <p class="text-center">No hay notas a√∫n</p>
                    <a href="/notes/add" class="btn btn-success btn-block">Cree una nueva nota</a>
                </div>
            </div>
    {{/each}}
</div>